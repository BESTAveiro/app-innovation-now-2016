<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView19"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/soraya"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CEO and Founder InnoCrowd"
        android:id="@+id/textView48"
        android:layout_below="@+id/imageView19"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Licenciou-se em Ciências Farmacêuticas pela Universidade de Lisboa. Em 2011, fundou a startup portuguesa InoCrowd, onde é CEO. Esta tem como visão revolucionar o mercado da inovação através de parcerias com companhias e universidades e o seu objetivo é estimular e acelerar a inovação entre organizações e empresas. Assinou parcerias com as melhores universidades portuguesas e com as cinco universidades de topo nos EUA, Europa, Ásia, Rússia, Israel e Japão. A InoCrowd é a maior e mais completa plataforma de inovação tecnológica aberta do planeta. Ganhou diversos prémios, incluindo o Prémio Femina pelo seu contributo para o prestígio de Portugal e da Lusofonia nas áreas do empreendedorismo e inovação."
        android:id="@+id/textView54"
        android:layout_below="@+id/textView48"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp" />
</RelativeLayout>
</ScrollView>