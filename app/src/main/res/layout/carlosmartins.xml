<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">



    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView20"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/carlos"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Researcher at Centre for Astrophysics of the University of Porto"
            android:id="@+id/textView49"
            android:layout_below="@+id/imageView20"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="É investigador no Centro de Astrofísica da Universidade do Porto, focando-se principalmente na cosmologia fundamental e astrofísica de partículas. Interessa-se em testes da consciência do paradigma cosmológico padrão e em buscas astrofísicas de nova física, sendo o seu principal objetivo utilizar o universo primitivo como um laboratório para realizar testes de precisão da física fundamental. Vem ao Innovation Now! 2016 falar-nos do projeto ESPRESSO, novo projeto para um espectrógrafo de alta resolução de nova geração que espera encontrar planetas semelhantes à Terra e com água líquida, candidatos à existência de vida."
            android:id="@+id/textView55"
            android:layout_below="@+id/textView49"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="38dp" />
    </RelativeLayout>
</ScrollView>