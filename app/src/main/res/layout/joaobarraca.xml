<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView17"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/joaobarraca"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Coordinator Telecomunications and Networking Group - Aveiro"
        android:id="@+id/textView46"
        android:layout_below="@+id/imageView17"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Licenciou-se em Computer Science pela Universidade de Aveiro. Foi professor na Escola Superior de Tecnologia e Gestão de Águeda e, em 2007, voltou para a Universidade de Aveiro, onde ensina tópicos relacionados com Networking Architectures, Segurança e Programação. Para além disso, é coordenador de grupo no Instituto de Telecomunicações. Tem vindo a fazer project management/team coordination e investigação em projetos de R and D relacionados com as comunicações M2M (ETSI M2M), engenharia de software, sistemas virtualizados e tecnologias de networking."
        android:id="@+id/textView53"
        android:layout_below="@+id/textView46"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="47dp" />
</RelativeLayout>
</ScrollView>